# Block and blinking cursor
cursor-style = block
shell-integration-features = no-cursor

# Theming and display
theme = "Monokai Soda"
cursor-color = f5b77d
background = 000000
selection-background = 464c91
selection-foreground = ffffff
unfocused-split-fill = ffffff
unfocused-split-opacity = 0.9
window-colorspace = display-p3

# Window state
window-save-state = always

## Split Navigation
keybind = cmd+\=new_split:right
keybind = cmd+p=new_split:down

keybind = cmd+left=goto_split:left
keybind = cmd+down=goto_split:bottom
keybind = cmd+right=goto_split:right
keybind = cmd+up=goto_split:top
keybind = cmd+enter=toggle_split_zoom

keybind = cmd+e=equalize_splits

# Prevents accidental closing of the terminal
keybind = cmd+w=unbind

# Global Terminal Toggle
keybind = global:ctrl+grave_accent=toggle_quick_terminal

# Clipboard
clipboard-paste-protection = false

